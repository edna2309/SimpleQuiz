<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleQuiz.Kraj"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="Slika"
                   HeightRequest="200"
                   Margin="0,90,0,20"/>
            <Label x:Name="Bodovi" 
                   HorizontalOptions="Center"
                   FontFamily="Naslov"
                   FontSize="28"/>
            <Label x:Name="Poruka" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   FontSize="22"
                   FontFamily="Ostalo1"
                   Padding="15"
                   />
            <Button Text="Restart"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    WidthRequest="160"
                    CornerRadius="10"
                    Margin="0,20,0,0"
                    BackgroundColor="#57b5ac"
                    TextColor="White"
                    FontFamily="Ostalo1"
                    FontSize="22"
                    FontAttributes="Bold"
                    Clicked="Restart"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>